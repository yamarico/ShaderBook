{
  "textlint.nodePath": "./node_modules",
  "textlint.run": "onType",
  "textlint.configPath": "./articles/**/**.re",
  "textlint.languages": ["review"],
  "textlint.autoFixOnSave": true,
  "editor.insertSpaces": false,
  "editor.tabSize": 4,
  "editor.fontFamily": "Consolas, 'Courier New', monospace",
  "editor.formatOnSave": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true
  }
}
